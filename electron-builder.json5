{
  "appId": "com.todo-manager.app",
  "asar": true,
  "icon": "public/favicon.ico",
  "directories": {
    "output": "release-builds/${version}"
  },
  "files": [
    "dist-electron",
    "dist"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}